{
	"name": "e-commerce-server",
	"version": "1.0.0",
	"description": "A backend server for https://crwn-clothing-pwa.netlify.app.",
	"main": "src/index.js",
	"type": "module",
	"scripts": {
		"test": "nodemon src/server.js",
		"client": "cd client && npm start",
		"server": "nodemon src/server.js",
		"build-app": "cd client && npm run build",
		"dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
		"start": "node src/server.js",
		"heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
		"predeploy": "cd client && git push && npm run build",
		"deploy": "netlify deploy && netlify deploy --prod"
	},
	"author": "vinayak1337",
	"license": "ISC",
	"dependencies": {
		"argon2": "^0.28.3",
		"chalk": "^5.0.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.2",
		"express-list-endpoints": "^6.0.0",
		"express-list-routes": "^1.1.3",
		"express-rate-limit": "^6.0.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.1.3",
		"morgan": "^1.10.0",
		"stripe": "^8.195.0",
		"swagger-ui-express": "^4.3.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-list-endpoints": "^6.0.0",
		"@types/morgan": "^1.9.3",
		"@types/swagger-ui-express": "^4.1.3",
		"concurrently": "^6.5.1",
		"nodemon": "^2.0.15",
		"tslib": "^2.3.1"
	}
}